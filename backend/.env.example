NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

EXCHANGE_NAME=kraken
KRAKEN_API_KEY=your_key
KRAKEN_API_SECRET=your_secret

DATABASE_URL=postgres://postgres:postgres@localhost:5432/rotationbot
REDIS_HOST=localhost
REDIS_PORT=6379
JWT_SECRET=change_this

# Strategy settings (UNIVERSE, CADENCE_HOURS, MAX_POSITIONS, etc.) are now managed in the UI Settings page
# They are stored in the database and can be changed without restarting the application

FILL_TIMEOUT_MINUTES=15
MAKER_OFFSET_PCT=0.001
MAX_SLIPPAGE_PCT=0.005

ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Alert System Configuration
ALERTS_ENABLED=true
ALERTS_EMAIL_ENABLED=true
ALERTS_EMAIL_RECIPIENTS=your-email@example.com,another@example.com

# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=false
SMTP_FROM=your-email@gmail.com

# Alternative SMTP providers:
# For Outlook/Hotmail:
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_SECURE=false

# For SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM=your-verified-sender@example.com

# Alert Thresholds
ALERTS_LOW_BALANCE_USD=50
ALERTS_LARGE_DRAWDOWN_PCT=10

# Alert Cooldown Periods (in minutes)
ALERTS_COOLDOWN_ORDER_FAILURE=60
ALERTS_COOLDOWN_EXCHANGE=30
ALERTS_COOLDOWN_LOW_BALANCE=1440
ALERTS_COOLDOWN_DRAWDOWN=60
ALERTS_COOLDOWN_JOB_FAILURE=60

# Logging
LOG_LEVEL=info
